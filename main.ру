async def start():
    threading.Thread(target=run_health_server, daemon=True).start()
    
    code_env = os.environ.get('TG_CODE')
    
    if not code_env:
        print("‚ö†Ô∏è –í–ù–ò–ú–ê–ù–ò–ï: –ü–æ–ª–µ TG_CODE –ø—É—Å—Ç–æ–µ. –ë–æ—Ç –Ω–∞ –ø–∞—É–∑–µ, —á—Ç–æ–±—ã –Ω–µ –ø–æ–ª—É—á–∏—Ç—å –±–∞–Ω.")
        print("üí° –ö–∞–∫ —Ç–æ–ª—å–∫–æ –ø—Ä–∏–¥–µ—Ç –∫–æ–¥ –≤ Telegram, –≤—Å—Ç–∞–≤—å –µ–≥–æ –≤ Environment Variables –∏ –Ω–∞–∂–º–∏ Save.")
        # –ë–µ—Å–∫–æ–Ω–µ—á–Ω—ã–π —Ü–∏–∫–ª –æ–∂–∏–¥–∞–Ω–∏—è, —á—Ç–æ–±—ã —Å–µ—Ä–≤–∏—Å –Ω–µ –≤—ã–ª–µ—Ç–∞–ª —Å –æ—à–∏–±–∫–æ–π EOF
        while not os.environ.get('TG_CODE'):
            await asyncio.sleep(10)
    
    # –ï—Å–ª–∏ –∫–æ–¥ –ø–æ—è–≤–∏–ª—Å—è, –ø—Ä–æ–±—É–µ–º –≤–æ–π—Ç–∏
    await tg_client.start(phone=PHONE, code_callback=lambda: os.environ.get('TG_CODE'))
    
    if not wa_client.is_connected():
        wa_client.pair_phone(PHONE)
        
    print("‚úÖ –ê–í–¢–û–†–ò–ó–ê–¶–ò–Ø –ü–†–û–®–õ–ê! –°–ò–°–¢–ï–ú–ê –ó–ê–ü–£–©–ï–ù–ê")
    await tg_client.run_until_disconnected()
